        <script>
        (function() {
            var script = document.createElement('script');
            script.src = 'https://unpkg.com/web-vitals@3/dist/web-vitals.attribution.iife.js';
            script.onload = function() {
                // When loading `web-vitals` using a classic script, all the public
                // methods can be found on the `webVitals` global namespace.

                var sessionCookieDetected = false;
                function getCookie(cname) {
                    var name = cname + "=";
                    var decodedCookie = decodeURIComponent(document.cookie);
                    var ca = decodedCookie.split(';');
                    for (var i = 0; i < ca.length; i++) {
                        var c = ca[i];
                        while (c.charAt(0) == ' ') {
                            c = c.substring(1);
                        }
                        if (c.indexOf(name) == 0) {
                            return c.substring(name.length, c.length);
                        }
                    }
                    return "";
                }

                if(getCookie("_gid") != ""){
                    sessionCookieDetected = true;
                }

                sessionCookieDetected = !sessionCookieDetected;

                function sendToGoogleAnalytics({name, delta, value, id, entries, rating, attribution}) {
                    gtag('event', name, {
                        first_view: sessionCookieDetected,
                        // Built-in params:
                        value: delta,
                        metric_id: id,
                        metric_value: value,
                        metric_delta: delta,
                        metric_rating: rating,
                        // debug_info
                        debug_target: attribution ? attribution.largestShiftTarget||attribution.element||attribution.eventTarget||'' : '(not set)',
                        debug_event: attribution ? attribution.eventType||'' : '',
                        debug_timing: attribution ? attribution.loadState||'' : '',
                        event_time: attribution ? attribution.largestShiftTime||(attribution.lcpEntry&&attribution.lcpEntry.startTime)||attribution.eventTime||'': '',
                    });
                }

                webVitals.onCLS(sendToGoogleAnalytics);
                webVitals.onFID(sendToGoogleAnalytics);
                webVitals.onLCP(sendToGoogleAnalytics);
                webVitals.onTTFB(sendToGoogleAnalytics);
                webVitals.onFCP(sendToGoogleAnalytics);
                webVitals.onINP(sendToGoogleAnalytics);
            }
            document.head.appendChild(script);
        }())
    </script>
    
